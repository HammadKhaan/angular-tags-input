{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "angular-tags-input": {
      "projectType": "library",
      "root": "projects/angular-tags-input",
      "sourceRoot": "projects/angular-tags-input/src",
      "prefix": "ti",
      "schematics": {
        "@schematics/angular:component": {
          "styleext": "scss"
        },
        "@ngrx/schematics:component": {
          "styleext": "scss"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/angular-tags-input/tsconfig.lib.json",
            "project": "projects/angular-tags-input/ng-package.json"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/angular-tags-input/src/test.ts",
            "tsConfig": "projects/angular-tags-input/tsconfig.spec.json",
            "karmaConfig": "projects/angular-tags-input/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/angular-tags-input/tsconfig.lib.json",
              "projects/angular-tags-input/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }},
  "defaultProject": "angular-tags-input"
}
